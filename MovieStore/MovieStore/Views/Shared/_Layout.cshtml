<!DOCTYPE html>

@using System.Web.Optimization
@using System

@{
    DateTime today = DateTime.Today;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="row">
        <div class="col">
            <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-primary">
                <a class="navbar-brand" href="https://github.com/Roflcoffel/csharp_basics">
                    <img src="/Content/images/Octocat.png" width="50" height="40" alt="" />
                </a>
                <div class="container">

                    <ul class="navbar-nav">

                        <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                            <a href="@Url.Action("Index", "Home")" class="nav-link">
                                Store
                            </a>
                        </li>
 
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                Exercise 1
                            </a>
                            <div class="dropdown-menu">
                                <a href="@Url.Action("TopFive", "Home")" class="dropdown-item">
                                    Top Five
                                </a>
                                <a href="@Url.Action("BeforeDate", "Home")" class="dropdown-item">
                                    Before 2010
                                </a>
                                <a href="@Url.Action("CustomerBought", "Home")" class="dropdown-item">
                                    Bought Pulp Fiction
                                </a>
                                <a href="@Url.Action("OrderByPrice", "Home")" class="dropdown-item">
                                    Movies by price
                                </a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                Exercise 2
                            </a>
                            <div class="dropdown-menu">
                                <a href="@Url.Action("OrderDetail", "Home")" class="dropdown-item">
                                    Order Details
                                </a>
                                <a href="@Url.Action("PlacedOrderOnDate", "Home")" class="dropdown-item">
                                    Orders On 2015-01-01
                                </a>

                                <a href="@Url.Action("MovieByDate", "Home")" class="dropdown-item">
                                    Movies Oldest to Newest
                                </a>

                                <a href="@Url.Action("AllCustomers", "Home")" class="dropdown-item">
                                    All Customers
                                </a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                Exercise 3
                            </a>
                            <div class="dropdown-menu">
                                <a href="@Url.Action("NameStartsWith", "Home")" class="dropdown-item">
                                    Name Starts With
                                </a>

                                <a href="@Url.Action("FirstLetter", "Home")" class="dropdown-item">
                                    First Letter List
                                </a>

                                <a href="@Url.Action("NamesAlphabetical", "Home")" class="dropdown-item">
                                    Names Alphabetically
                                </a>

                                <hr />

                                <a href="@Url.Action("Sum", "Home")" class="dropdown-item">
                                    Sum
                                </a>

                                <a href="@Url.Action("OddCount", "Home")" class="dropdown-item">
                                    Odd Count
                                </a>

                                <a href="@Url.Action("LargestNumber", "Home")" class="dropdown-item">
                                    Largest Number
                                </a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                Optional
                            </a>
                            <div class="dropdown-menu">
                                <a href="@Url.Action("OrderOverview", "Home")" class="dropdown-item">
                                    Order Overview
                                </a>
                                <a href="@Url.Action("OrdersAndCost", "Home")" class="dropdown-item">
                                    Orders And Cost
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <h3>@ViewBag.Title</h3>
                <p>@ViewBag.Message</p>
            </div>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <footer class="fixed-bottom">
        <div class="container">
            <div class="row">
                <div class="col"></div>
                <div class="col">
                    <span class="text-muted">@today.ToString("yyyy-MM-dd") - Andreas Johansson</span>
                </div>
                <div class="col"></div>
            </div>

        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>